{# src/Bdx/TutoratBundle/Resources/views/Student/index.html.twig #}


{% extends 'BdxTutoratBundle::layout.html.twig' %}


{% block content %}
<h1>Liste des étudiants</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Téléphone</th>
            <th>Utilisateur associé</th>
            <th>Informations</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.name }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.tel }}</td>
            <td>
			{% if entity.user %}
			{{ entity.user }}
			{% else %}
			[non associé]
			{% endif %}
			</td>
            <td>{{ entity.information }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('student_show', { 'id': entity.id }) }}">Détails</a>
                    </li>
                    <li>
                        <a href="{{ path('student_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('student_new') }}">
            Ajouter un nouvel étudiant
        </a>
    </li>
</ul>
{% endblock %}
