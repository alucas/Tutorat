{# src/Bdx/TutoratBundle/Resources/views/Lesson/edit.html.twig #}


{% extends 'BdxTutoratBundle::layout.html.twig' %}


{% block content %}
<h1>Modification d'une matière</h1>

<form action="{{ path('lesson_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Modifier</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('lesson') }}">
            Retour à la liste
        </a>
    </li>
    <li>
		<a href="{{ path('lesson_delete', { 'id': entity.id }) }}">
            Supprimer la matière
        </a>
    </li>
</ul>
{% endblock %}
